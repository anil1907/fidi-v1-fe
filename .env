# API Base URL
# For development, this will be handled by the Vite proxy
# For production, set this to your backend URL
VITE_API_BASE_URL=http://localhost:5000/api

# Database URL (if using persistent database)
# DATABASE_URL=postgresql://user:password@localhost:5432/nutrisyonel

# Session Secret (for production)
SESSION_SECRET=your-super-secret-session-key-here

# Development settings
NODE_ENV=development
PORT=5000

# Optional: Enable debug logging
DEBUG=false

# Optional: Pagination defaults
DEFAULT_PAGE_SIZE=10
MAX_PAGE_SIZE=100

# Optional: File upload settings (if implementing file uploads)
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf

# Optional: Email settings (if implementing email notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
FROM_EMAIL=noreply@nutrisyonel.com
FROM_NAME=Nutrisyonel

# Optional: JWT settings (if implementing authentication)
JWT_SECRET=your-jwt-secret-key-here
JWT_EXPIRES_IN=7d

# Optional: Rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100

# Optional: Backup settings
BACKUP_ENABLED=true
BACKUP_INTERVAL=86400000
BACKUP_RETENTION_DAYS=30
